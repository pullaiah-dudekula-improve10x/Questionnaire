<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ComponentsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Components"
        android:textColor="#101010"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/radiobuttons_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Radio Buttons" />

    <Button
        android:id="@+id/checkboxes_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Check Boxes" />

    <Button
        android:id="@+id/calender_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calender Button" />
</LinearLayout>