<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".AllCorrectAnswersActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Please all the correct answers"
        android:textColor="#0B0A0A"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Which of the following are planents"
        android:textColor="#100F0F"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/mercury_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mercury"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/sun_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sun"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/moon_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moon"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/jupiter_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jupiter"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/saturn_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturn"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/pluto_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pluto"
        android:textSize="16sp" />

    <Button
        android:id="@+id/verify2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Verify" />

</LinearLayout>